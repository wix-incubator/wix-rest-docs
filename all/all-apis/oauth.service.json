      "labels": [],
      "nameParams": [],
      "params": [
        {
          "in": "BODY",
          "name": "grant_type",
          "type": "string",
          "doc": "Value must be set to \"refresh_token\"\n",
          "required": false
        },
        {
          "in": "BODY",
          "name": "client_id",
          "type": "string",
